
  <table class="table table-hover table-inverse">
       <thead>
         <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
         </tr>
       </thead>
        <tbody>
          <% @books.each do |book| %>

            <tr>
            <td><%= link_to image_tag("/assets/image/no_image.jpg", size: '80x80'), user_path(book.user.id) %></td>
            <td><p><%= link_to book.title, book_path(book.id)%></p></td>
            <td><%= book.body %></td>

            <% if book.favorited_by?(current_user) %>
                            <th>
                                <%= link_to book_favorites_path(book.id), method: :delete do %>
                                    <font color="red"><i class="fa-solid fa-heart"></i><%= book.favorites.count %></font>
                                <% end %>
                            </th>
                         <% else %>
                            <th>
                                <%= link_to book_favorites_path(book), method: :post do %>
                                    <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
                                <% end %>
                            </th>
                        <% end %>

                        <th><p>コメント数:<%= book.book_comments.count %></p></th>

         </tr>
         <%end%>
       </tbody>
     </table>


